<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Siste de Controle FacilityBond</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <style>
        .user{
          
           cursor:pointer;
          
             
        }
        .table-header {
            height: 50px;
            background-color: #35478C;
            color: #fff;
            padding: 10px;
            display: flex;
            border-radius: 8px 8px 0 0;
        }
            .table-header span a {
                text-decoration: none;
                color: #333;
            }
        .table-header strong{
            font-size:20px;
          
        }
        .table > tbody > tr,th {
            text-align: center;
        }
        .table > tbody > tr > td {
            padding: 8px;
            font-size: 12px;
            white-space:nowrap;
           
        }
            .table > tbody > tr > td a {
                text-transform: uppercase;
                cursor: pointer;
            }
       
        .table > tbody > tr > th {
            color: #0d65d9;
            background-color: #f5f5f5;
        }
        .table-hover > tbody > tr:hover {
            background-color: #D0E9F2;
        }
        .personiddon {
            padding:4px;
       
        }
        .text-align-center {
            text-align: -webkit-center;
        }
        .user svg .front {
            fill: #1b5b93
        }
        .f-right {
            float:right;
        }
        .centralizing{
            margin:0 auto;
            position: relative;
            width:max-content;
        }
        .navbar-light{
            color: #fff!important;
            background-color: #FFF;
        }
            .navbar-light .navbar-nav > li > a:hover, .navbar-inverse .navbar-nav > li > a:focus {
                color: #000000;
                background-color: transparent;
            }
        .navbar-light .navbar-nav > li > a {
            color: #9d9d9d;
        }

        body {
            font-family:Arial;
            background-image:url(/Content/img/background.jpg)
        }
        .body-content{
            min-height:100vh;
            height:auto;
            padding-top:40px;
            
        }
        .shadow-b {
            box-shadow: 0px 0px 16px 0px rgb(0 0 0 /50%);
        }
        .shadow-m {
            box-shadow: 0 3px 4px rgba(0, 0, 0, 0.2);
        }
        .logo {
            float: left;
            height: 60px;
            padding: 8px 5px;
            font-size: 18px;
            line-height: 20px;
        }
        .logo img{
            height:100%;
            width:auto;
        }
        .size-image img {
            height: 100%;
            width: auto;
        }

    </style>
</head>
<body>
    <div class="navbar navbar-light navbar-fixed-top shadow-b">
        <div class="container">
            <div class="row">
                <div class="navbar-header ">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <div class="logo navbar-brand ">
                        <img src="~/Content/img/fblogo.gif" class="img-responsive" />
                    </div>
                  


                </div>
                <div class="navbar-collapse collapse ">
                    <div class="centralizing">
                        <ul class="nav navbar-nav ">
                            <li>@Html.ActionLink("Início", "Index", "Home")</li>
                            <li>@Html.ActionLink("Clientes", "Clientes", "Home")</li>
                            
                        </ul>
                    </div>
                   

                    <div class="user f-right navbar-header">
                        
                        <div class="personiddon">
                            <img class="img-responsive img-rounded" width="50" height="50" src="~/Content/img/person-default.jpg"/>
                        </div>
                                                                  
                       

                    </div>
                </div>
                



            </div>
            
        </div>
    </div>
    <div class="container body-content shadow-b" style="background-color:#FFFFFF;">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Meu Aplicativo ASP.NET</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
